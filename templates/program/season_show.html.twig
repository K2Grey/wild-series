{% extends 'base.html.twig' %}

{% block title %}{{ program.title }} : Saison {{ season.number }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }} : Saison {{ season.number }}</h1>
            <p>{{ season.description }}</p>
            <p>Liste des épisodes</p>
            <ul>
                {% for episode in episodes %}
                    <li>
                        <a href="{{ path("program_episode_show",
                            { programId: program.id, seasonId: season.id, episodeId: episode.id }) }}">
                            Episode {{ episode.number }} : {{ episode.title }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <a href="{{ path("program_show", { id: program.id }) }}">
        Retour à la liste des saisons
    </a>

{% endblock %}
